<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Main_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="Plea"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_Main_DigitalWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="Digital Wallet"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_Main_Fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="Resolved ticket"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Main_Pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="Pending ticket"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_Main_Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="Notification"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_Main_Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="Settings"
            android:textColor="@color/black" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>