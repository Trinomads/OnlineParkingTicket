<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:padding="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/icon_user_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp">

                <com.onlineparkingticket.commonTextView.TextViewBold
                    android:id="@+id/tv_UserProfile_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="John Main"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14sdp" />

                <com.onlineparkingticket.commonTextView.TextViewRegular
                    android:id="@+id/tv_UserProfile_Mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/call"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />

                <com.onlineparkingticket.commonTextView.TextViewRegular
                    android:id="@+id/tv_UserProfile_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp">

                <com.onlineparkingticket.commonTextView.TextViewRegular
                    android:id="@+id/tv_UserProfile_PlateNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/number_plate"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />

                <com.onlineparkingticket.commonTextView.TextViewRegular
                    android:id="@+id/tv_UserProfile_Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/pin"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:background="@color/white"
            android:orientation="vertical">

            <com.onlineparkingticket.commonTextView.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tickets"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.onlineparkingticket.commonTextView.TextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/paid_mini"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@string/paid_small"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                    <com.onlineparkingticket.commonTextView.TextViewBold
                        android:id="@+id/tv_UserProfile_Ticket_Paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginLeft="@dimen/_minus15sdp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.onlineparkingticket.commonTextView.TextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/paid_mini"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@string/unpaid_small"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                    <com.onlineparkingticket.commonTextView.TextViewBold
                        android:id="@+id/tv_UserProfile_Ticket_UnPaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_minus20sdp"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.onlineparkingticket.commonTextView.TextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/paid_mini"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@string/total_small"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                    <com.onlineparkingticket.commonTextView.TextViewBold
                        android:id="@+id/tv_UserProfile_Ticket_Total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_minus15sdp"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:orientation="vertical">

            <com.onlineparkingticket.commonTextView.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/documents"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/icon_user_placeholder" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/icon_user_placeholder" />

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_user_placeholder" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>