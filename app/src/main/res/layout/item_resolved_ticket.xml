<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_screen"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_ItemCommonTicket_Main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_ItemCommonList_Select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:visibility="gone"
            android:button="@drawable/custom_check_box" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.onlineparkingticket.commonTextView.TextViewBold
                    android:id="@+id/item_CommonListTicket_ViolationNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:text="Citation No : "
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11sdp" />

                <com.onlineparkingticket.commonTextView.TextViewBold
                    android:id="@+id/item_CommonListTicket_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.onlineparkingticket.commonTextView.TextViewBold
                    android:id="@+id/item_CommonListTicket_Plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:text="Plate No : "
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.onlineparkingticket.commonTextView.TextViewBold
                    android:id="@+id/item_CommonListTicket_Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:text="$ 0"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11sdp" />

                <com.onlineparkingticket.commonTextView.TextViewBold
                    android:id="@+id/item_CommonListTicket_Paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    android:text="@string/paid"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color" />

</LinearLayout>