<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:layoutDirection="ltr"
    tools:context=".activity.RegistrationActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:supportsRtl="false"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <include layout="@layout/header_with_back" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_5sdp"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <com.onlineparkingticket.commonTextView.TextViewRegular
                           android:id="@+id/item_CommonListTicket_Date"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:padding="@dimen/_2sdp"
                           android:text="Jun 12, 2018"
                           android:textColor="@color/text_color"
                           android:textSize="@dimen/_11sdp" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <com.onlineparkingticket.commonTextView.TextViewRegular
                           android:id="@+id/item_CommonListTicket_Plate"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:padding="@dimen/_2sdp"
                           android:text="Plate No : 1010"
                           android:textColor="@color/text_color"
                           android:textSize="@dimen/_11sdp" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <com.onlineparkingticket.commonTextView.TextViewRegular
                           android:id="@+id/item_CommonListTicket_ViolationNo"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:padding="@dimen/_2sdp"
                           android:text="Violation No : 12542"
                           android:textColor="@color/text_color"
                           android:textSize="@dimen/_11sdp" />


                   </LinearLayout>

               </LinearLayout>

           </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/_5sdp"
               android:orientation="vertical">
               <com.onlineparkingticket.commonTextView.TextViewBold
                   android:id="@+id/item_violation"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_2sdp"
                   android:text="@string/Violation"
                   android:textColor="@color/text_color"
                   android:textSize="@dimen/_14sdp" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.onlineparkingticket.commonTextView.TextViewRegular
                       android:id="@+id/item_violation_Date"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/_2sdp"
                       android:text="Mr. John Doe"
                       android:textColor="@color/text_color"
                       android:textSize="@dimen/_11sdp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.onlineparkingticket.commonTextView.TextViewRegular
                       android:id="@+id/item_violation_Plate"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:padding="@dimen/_2sdp"
                       android:text="You are being accused of speeding Going 15 over the limit."
                       android:textColor="@color/text_color"
                       android:textSize="@dimen/_11sdp" />

               </LinearLayout>



           </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/text_color" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">

               <CheckBox
                   android:id="@+id/checkbox_ItemCommonList_Select"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_20sdp"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:visibility="gone"
                   android:button="@drawable/custom_check_box" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_15sdp"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <com.onlineparkingticket.commonTextView.TextViewBold
                           android:id="@+id/item_CommonListTicket_Name"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:padding="@dimen/_2sdp"
                           android:text="Speed : 65"
                           android:textColor="@color/text_color"
                           android:textSize="@dimen/_13sdp" />

                       <com.onlineparkingticket.commonTextView.TextViewBold
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:padding="@dimen/_2sdp"
                           android:text="Zone :50"
                           android:textColor="@color/text_color"
                           android:textSize="@dimen/_13sdp" />

                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_10sdp">

                       <com.onlineparkingticket.commonTextView.TextViewBold

                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:padding="@dimen/_2sdp"
                           android:text="@string/ticketcharge"
                           android:textColor="@color/text_color"
                           android:textSize="@dimen/_13sdp" />

                       <com.onlineparkingticket.commonTextView.TextViewBold
                           android:id="@+id/item_CommonListTicket_Paid"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:padding="@dimen/_2sdp"
                           android:text="$6.75 USD"
                           android:textColor="@color/text_color"
                           android:textSize="@dimen/_13sdp" />

                   </LinearLayout>

               </LinearLayout>

           </LinearLayout>

       </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_fixit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.onlineparkingticket.commonTextView.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_7sdp"
                android:text="@string/fixit"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/fix_it"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_PleaGuilty_Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.onlineparkingticket.commonTextView.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_7sdp"
                android:text="@string/next"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/next_blue_bg"/>

        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>